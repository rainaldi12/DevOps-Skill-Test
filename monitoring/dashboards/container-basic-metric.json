{
  "id": null,
  "uid": "basic-monitor-container-filter",
  "title": "Container Basic Metrics (Filtered by Instance & Container)",
  "tags": ["docker", "prometheus", "filtered"],
  "timezone": "browser",
  "schemaVersion": 37,
  "version": 3,
  "refresh": "5s",
  "templating": {
    "list": [
      {
        "type": "datasource",
        "name": "DS_PROMETHEUS",
        "label": "Prometheus Data Source",
        "query": "prometheus",
        "refresh": 1
      },
      {
        "name": "instance",
        "type": "query",
        "label": "Instance",
        "datasource": "$DS_PROMETHEUS",
        "refresh": 2,
        "query": "label_values(node_cpu_seconds_total, instance)",
        "includeAll": true,
        "multi": true,
        "sort": 1
      },
      {
        "name": "container",
        "type": "query",
        "label": "Container Name",
        "datasource": "$DS_PROMETHEUS",
        "refresh": 2,
        "query": "label_values(container_last_seen, name)",
        "includeAll": true,
        "multi": true,
        "sort": 1
      }
    ]
  },
  "time": {"from": "now-15m", "to": "now"},
  "panels": [
    {
      "type": "gauge",
      "title": "CPU Usage (%)",
      "datasource": "$DS_PROMETHEUS",
      "targets": [
        {
          "expr": "100 - (avg by (instance,name)(rate(node_cpu_seconds_total{mode=\"idle\", instance=~\"$instance\", name=~\"$container\"}[1m])) * 100)",
          "legendFormat": "{{instance}} / {{name}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green"},
              {"color": "yellow", "value": 70},
              {"color": "red", "value": 90}
            ]
          }
        }
      },
      "gridPos": {"x": 0, "y": 0, "w": 8, "h": 8}
    },
    {
      "type": "gauge",
      "title": "Memory Usage (%)",
      "datasource": "$DS_PROMETHEUS",
      "targets": [
        {
          "expr": "100 - ((node_memory_MemAvailable_bytes{instance=~\"$instance\", name=~\"$container\"} / node_memory_MemTotal_bytes{instance=~\"$instance\", name=~\"$container\"}) * 100)",
          "legendFormat": "{{instance}} / {{name}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green"},
              {"color": "yellow", "value": 75},
              {"color": "red", "value": 90}
            ]
          }
        }
      },
      "gridPos": {"x": 8, "y": 0, "w": 8, "h": 8}
    },
    {
      "type": "gauge",
      "title": "Disk Usage (%)",
      "datasource": "$DS_PROMETHEUS",
      "targets": [
        {
          "expr": "100 - ((node_filesystem_avail_bytes{fstype!=\"tmpfs\", instance=~\"$instance\", name=~\"$container\"} / node_filesystem_size_bytes{fstype!=\"tmpfs\", instance=~\"$instance\", name=~\"$container\"}) * 100)",
          "legendFormat": "{{instance}} / {{name}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green"},
              {"color": "yellow", "value": 80},
              {"color": "red", "value": 90}
            ]
          }
        }
      },
      "gridPos": {"x": 16, "y": 0, "w": 8, "h": 8}
    },
    {
      "type": "timeseries",
      "title": "System Load (1m avg)",
      "datasource": "$DS_PROMETHEUS",
      "targets": [
        {
          "expr": "node_load1{instance=~\"$instance\", name=~\"$container\"}",
          "legendFormat": "{{instance}} / {{name}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "color": {"mode": "palette-classic"}
        }
      },
      "gridPos": {"x": 0, "y": 8, "w": 24, "h": 8}
    }
  ]
}
